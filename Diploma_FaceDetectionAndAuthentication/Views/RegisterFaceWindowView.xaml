<Window x:Class="Diploma_FaceDetectionAndAuthentication.Views.RegisterFaceWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diploma_FaceDetectionAndAuthentication.Views"
        mc:Ignorable="d"
        Title="Register Face" Height="380" Width="330" Icon="/Images/logo.png" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Loaded="Grid_Loaded"
          x:Name="grid1">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Watch straight to the camera"
                   Grid.Row="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   x:Name="txtTip"/>

        <Button Grid.Row="2"
                Content="Start"
                x:Name="btnStart"
                Click="btnStart_Click"/>
    </Grid>
</Window>
